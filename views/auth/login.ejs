<% layout('layout') %>

<style>
  :root {
    --rainbow-1: #FF355E; /* Radical Red */
    --rainbow-2: #FF6037; /* Outrageous Orange */
    --rainbow-3: #FF9966; /* Atomic Tangerine */
    --rainbow-4: #FFCC33; /* Sunglow */
    --rainbow-5: #66FF66; /* Screamin' Green */
    --rainbow-6: #50BFE6; /* Blizzard Blue */
    --rainbow-7: #FF6EFF; /* Shocking Pink */
    --rainbow-8: #EE34D2; /* Razzle Dazzle Rose */
    --dark: #0f0f13;
    --darker: #0a0a0d;
    --light: #f8f9fa;
    --gray: #2d3436;
    --light-gray: #636e72;
    --success: #00b894;
    --error: #d63031;
  }

  @keyframes rainbow-gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  body {
    margin: 0;
    font-family: 'Poppins', sans-serif;
    color: var(--light);
    background: var(--darker);
    background-image:
      radial-gradient(circle at 10% 20%, rgba(255, 53, 94, 0.1) 0%, transparent 30%),
      linear-gradient(to bottom, var(--darker), var(--dark));
    overflow-x: hidden;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    animation: fadeIn 0.6s ease-out;
  }

  .login-container {
    width: 100%;
    max-width: 480px;
    position: relative;
    z-index: 1;
    perspective: 1000px;
  }

  .login-card {
    background: rgba(15, 15, 19, 0.85);
    backdrop-filter: blur(12px);
    border-radius: 16px;
    padding: 48px 40px;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    overflow: hidden;
    transform-style: preserve-3d;
    transition: transform 0.5s ease, box-shadow 0.5s ease;
  }

  .login-card:hover {
    transform: translateY(-5px) rotateX(1deg) rotateY(1deg);
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.4);
  }

  .login-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      to bottom right,
      transparent 0%,
      transparent 45%,
      rgba(255, 53, 94, 0.05) 50%,
      transparent 55%,
      transparent 100%
    );
    animation: shine 8s infinite linear;
    z-index: -1;
  }

  @keyframes shine {
    0% { transform: translate(-30%, -30%) rotate(0deg); }
    100% { transform: translate(30%, 30%) rotate(360deg); }
  }

  .login-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .login-header h1 {
    font-weight: 600;
    font-size: 28px;
    margin-bottom: 8px;
    background: linear-gradient(45deg, 
      var(--rainbow-1), 
      var(--rainbow-3), 
      var(--rainbow-5), 
      var(--rainbow-7));
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-size: 300% 300%;
    animation: rainbow-gradient 8s ease infinite;
    position: relative;
    display: inline-block;
  }

  .login-header h1::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(45deg, 
      var(--rainbow-1), 
      var(--rainbow-3), 
      var(--rainbow-5), 
      var(--rainbow-7));
    border-radius: 3px;
    background-size: 300% 300%;
    animation: rainbow-gradient 8s ease infinite;
  }

  .login-header p {
    color: var(--light-gray);
    font-size: 14px;
    margin-top: 12px;
  }

  .form-group {
    margin-bottom: 24px;
    position: relative;
  }

  .form-control {
    width: 100%;
    padding: 14px 16px 14px 44px;
    background: rgba(45, 52, 54, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: #fff !important;
    font-size: 15px;
    transition: all 0.3s ease;
  }

  .form-control:focus {
    outline: none;
    border-color: var(--rainbow-5);
    box-shadow: 0 0 0 3px rgba(102, 255, 102, 0.2);
    background: rgba(45, 52, 54, 0.9);
  }

  .form-control::placeholder {
    color: #bbb;
  }

  .input-icon {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--light-gray);
    transition: all 0.3s ease;
  }

  .form-control:focus + .input-icon {
    color: var(--rainbow-5);
  }

  .password-toggle {
    position: absolute;
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--light-gray);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .password-toggle:hover {
    color: var(--rainbow-5);
  }

  .login-btn {
    width: 100%;
    padding: 14px;
    background: linear-gradient(45deg, 
      var(--rainbow-1), 
      var(--rainbow-3), 
      var(--rainbow-5), 
      var(--rainbow-7));
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 500;
    font-size: 16px;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 8px;
    position: relative;
    overflow: hidden;
    background-size: 300% 300%;
    animation: rainbow-gradient 8s ease infinite;
  }

  .login-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: 0.5s;
  }

  .login-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255, 53, 94, 0.3);
  }

  .login-btn:hover::before {
    left: 100%;
  }

  .google-login-btn {
    width: 100%;
    padding: 14px;
    background: rgba(255, 255, 255, 0.05);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    font-weight: 500;
    font-size: 15px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    text-decoration: none;
    margin-top: 16px;
  }

  .google-login-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  .google-icon {
    border-radius: 50%;
    padding: 6px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .google-icon i {
    font-size: 1.3rem;
  }

  .login-footer {
    margin-top: 32px;
    text-align: center;
    font-size: 14px;
    color: var(--light-gray);
  }

  .login-footer a {
    color: var(--rainbow-5);
    text-decoration: none;
    font-weight: 500;
    margin: 0 8px;
    transition: all 0.3s ease;
  }

  .login-footer a:hover {
    color: var(--rainbow-3);
    text-decoration: underline;
  }

  .floating-decoration {
    position: absolute;
    border-radius: 50%;
    filter: blur(40px);
    z-index: -2;
    animation: float 6s ease-in-out infinite;
  }

  .decoration-1 {
    width: 300px;
    height: 300px;
    top: -100px;
    right: -100px;
    background: radial-gradient(circle, var(--rainbow-7), transparent 70%);
    animation-delay: 0.5s;
  }

  .decoration-2 {
    width: 200px;
    height: 200px;
    bottom: -50px;
    left: -50px;
    background: radial-gradient(circle, var(--rainbow-3), transparent 70%);
    animation-delay: 1s;
  }

  .divider {
    display: flex;
    align-items: center;
    margin: 24px 0;
    color: var(--light-gray);
    font-size: 13px;
  }

  .divider::before, .divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin: 0 12px;
  }

  .forgot-password {
    display: block;
    text-align: right;
    margin-top: -16px;
    margin-bottom: 16px;
    font-size: 13px;
  }

  .forgot-password a {
    color: var(--rainbow-5);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .forgot-password a:hover {
    color: var(--rainbow-3);
    text-decoration: underline;
  }

  .alert {
    padding: 12px 16px;
    border-radius: 8px;
    margin-bottom: 24px;
    font-size: 14px;
    display: flex;
    align-items: center;
    animation: fadeIn 0.5s ease-out;
  }

  .alert-error {
    background-color: rgba(214, 48, 49, 0.2);
    border: 1px solid rgba(214, 48, 49, 0.3);
    color: #ff6b6b;
  }

  .alert-success {
    background-color: rgba(0, 184, 148, 0.2);
    border: 1px solid rgba(0, 184, 148, 0.3);
    color: #55efc4;
  }

  .alert i {
    margin-right: 10px;
    font-size: 16px;
  }

  @media (max-width: 576px) {
    .login-card {
      padding: 32px 24px;
    }
    
    .login-header h1 {
      font-size: 24px;
    }
  }
</style>

<main>
  <div class="login-container">
    <div class="floating-decoration decoration-1"></div>
    <div class="floating-decoration decoration-2"></div>

    <div class="login-card">
      <div class="login-header">
        <h1>Welcome Back</h1>
        <p>Please enter your credentials to login</p>
      </div>

      <form action="/login" method="POST">
        <div class="form-group">
          <i class="fas fa-user input-icon"></i>
          <input type="text" name="username" class="form-control" placeholder="Username" required>
        </div>
        
        <div class="form-group">
          <i class="fas fa-lock input-icon"></i>
          <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
          <i class="fas fa-eye password-toggle" id="togglePassword"></i>
        </div>

        <a href="/forgot-password" class="forgot-password">Forgot Password?</a>

        <button type="submit" class="login-btn">
          <span>Sign In</span>
        </button>

        <div class="divider">OR</div>

        <a href="/auth/google" class="google-login-btn">
          <span class="google-icon">
            <i class="fab fa-google"></i>
          </span>
          Continue with Google
        </a>
      </form>

      <div class="login-footer">
        <span>Don't have an account?</span>
        <a href="/register">Create Account</a>
      </div>
    </div>
  </div>
</main>

<script>
  // Password toggle functionality
  const togglePassword = document.querySelector('#togglePassword');
  const password = document.querySelector('#password');
  
  togglePassword.addEventListener('click', function() {
    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
    password.setAttribute('type', type);
    this.classList.toggle('fa-eye');
    this.classList.toggle('fa-eye-slash');
  });

  // Add ripple effect to buttons
  document.querySelectorAll('.login-btn, .google-login-btn').forEach(button => {
    button.addEventListener('click', function(e) {
      const x = e.clientX - e.target.getBoundingClientRect().left;
      const y = e.clientY - e.target.getBoundingClientRect().top;
      
      const ripple = document.createElement('span');
      ripple.classList.add('ripple');
      ripple.style.left = `${x}px`;
      ripple.style.top = `${y}px`;
      
      this.appendChild(ripple);
      
      setTimeout(() => {
        ripple.remove();
      }, 1000);
    });
  });
</script>

