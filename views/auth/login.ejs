<% layout('layout') %>

<style>
  :root {
    --primary: #6c5ce7;
    --primary-light: #a29bfe;
    --dark: #0f0f13;
    --darker: #0a0a0d;
    --light: #f8f9fa;
    --gray: #2d3436;
    --light-gray: #636e72;
  }

  body {
    margin: 0;
    font-family: 'Poppins', sans-serif;
    color: var(--light);
    background: var(--darker);
    background-image:
      radial-gradient(circle at 10% 20%, rgba(108, 92, 231, 0.1) 0%, transparent 30%),
      linear-gradient(to bottom, var(--darker), var(--dark));
    overflow-x: hidden;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
  }

  .login-container {
    width: 100%;
    max-width: 480px;
    position: relative;
    z-index: 1;
  }

  .login-card {
    background: rgba(15, 15, 19, 0.85);
    backdrop-filter: blur(12px);
    border-radius: 16px;
    padding: 48px 40px;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    overflow: hidden;
  }

  .login-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
      to bottom right,
      transparent 0%,
      transparent 45%,
      rgba(108, 92, 231, 0.05) 50%,
      transparent 55%,
      transparent 100%
    );
    animation: shine 8s infinite linear;
    z-index: -1;
  }

  @keyframes shine {
    0% { transform: translate(-30%, -30%) rotate(0deg); }
    100% { transform: translate(30%, 30%) rotate(360deg); }
  }

  .login-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .login-header h1 {
    font-weight: 600;
    font-size: 28px;
    margin-bottom: 8px;
    color: var(--light);
    position: relative;
  }

  .login-header h1::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: var(--primary);
    border-radius: 3px;
  }

  .login-header p {
    color: var(--light-gray);
    font-size: 14px;
    margin-top: 12px;
  }

  .form-group {
    margin-bottom: 24px;
  }

  .form-control {
    width: 100%;
    padding: 14px 16px;
    background: rgba(45, 52, 54, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: #fff !important;
    font-size: 15px;
    transition: all 0.3s ease;
  }

  .form-control:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(108, 92, 231, 0.2);
    background: rgba(45, 52, 54, 0.9);
  }

  .form-control::placeholder {
    color: #bbb;
  }

  .login-btn {
    width: 100%;
    padding: 14px;
    background: var(--primary);
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 500;
    font-size: 16px;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 8px;
  }

  .login-btn:hover {
    background: var(--primary-light);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(108, 92, 231, 0.3);
  }

  .google-login-btn {
    width: 100%;
    padding: 14px;
    background: rgba(255, 255, 255, 0.05);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    font-weight: 500;
    font-size: 15px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    text-decoration: none;
    margin-top: 16px;
  }

  .google-login-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  .google-icon {
    border-radius: 50%;
    padding: 6px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .google-icon i {
    font-size: 1.3rem;
  }

  .login-footer {
    margin-top: 32px;
    text-align: center;
    font-size: 14px;
    color: var(--light-gray);
  }

  .login-footer a {
    color: var(--primary-light);
    text-decoration: none;
    font-weight: 500;
    margin: 0 8px;
  }

  .login-footer a:hover {
    color: var(--primary);
    text-decoration: underline;
  }

  .floating-decoration {
    position: absolute;
    border-radius: 50%;
    background: rgba(108, 92, 231, 0.1);
    filter: blur(40px);
    z-index: -2;
  }

  .decoration-1 {
    width: 300px;
    height: 300px;
    top: -100px;
    right: -100px;
  }

  .decoration-2 {
    width: 200px;
    height: 200px;
    bottom: -50px;
    left: -50px;
  }

  .divider {
    display: flex;
    align-items: center;
    margin: 24px 0;
    color: var(--light-gray);
    font-size: 13px;
  }

  .divider::before, .divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin: 0 12px;
  }
</style>

<main>
  <div class="login-container">
    <div class="floating-decoration decoration-1"></div>
    <div class="floating-decoration decoration-2"></div>

    <div class="login-card">
      <div class="login-header">
        <h1>Welcome Back</h1>
        <p>Please enter your credentials to login</p>
      </div>

      <form action="/login" method="POST">
        <div class="form-group">
          <input type="text" name="username" class="form-control" placeholder="Username" required>
        </div>
        
        <div class="form-group">
          <input type="password" name="password" class="form-control" placeholder="Password" required>
        </div>

        <button type="submit" class="login-btn">Sign In</button>

        <div class="divider">OR</div>

        <a href="/auth/google" class="google-login-btn">
          <span class="google-icon">
            <i class="fab fa-google"></i>
          </span>
          Continue with Google
        </a>
      </form>

      <div class="login-footer">
        <span style="color: white !important;">Don't Have an Account ?</span>
        <a href="/register">Create Account</a>
      </div>
    </div>
  </div>
</main>

