<% layout('layout') %>

<style>
  :root {
    --rainbow-1: #FF355E; /* Radical Red */
    --rainbow-2: #FF6037; /* Outrageous Orange */
    --rainbow-3: #FF9966; /* Atomic Tangerine */
    --rainbow-4: #FFCC33; /* Sunglow */
    --rainbow-5: #66FF66; /* Screamin' Green */
    --rainbow-6: #50BFE6; /* Blizzard Blue */
    --rainbow-7: #FF6EFF; /* Shocking Pink */
    --dark: #121212;
    --darker: #0a0a0d;
    --light: #f8f9fa;
    --gray: #2d2d2d;
  }

  @keyframes rainbow-gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  body {
    margin: 0;
    font-family: 'Poppins', sans-serif;
    background: var(--darker);
    color: var(--light);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    background-image:
      radial-gradient(circle at 20% 30%, rgba(255, 53, 94, 0.1) 0%, transparent 25%),
      radial-gradient(circle at 80% 70%, rgba(80, 191, 230, 0.1) 0%, transparent 25%);
  }

  main {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    background: var(--dark);
    position: relative;
    overflow: hidden;
  }

  .signup-container {
    width: 100%;
    max-width: 450px;
    background: rgba(18, 18, 18, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    padding: 48px 40px;
    border-radius: 16px;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.05);
    position: relative;
    z-index: 2;
  }

  .signup-container h1 {
    font-weight: 600;
    font-size: 28px;
    text-align: center;
    margin-bottom: 30px;
    position: relative;
    background: linear-gradient(45deg, 
      var(--rainbow-1), 
      var(--rainbow-3), 
      var(--rainbow-5), 
      var(--rainbow-7));
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    background-size: 300% 300%;
    animation: rainbow-gradient 8s ease infinite;
  }

  .signup-container h1::after {
    content: '';
    display: block;
    width: 60px;
    height: 3px;
    background: linear-gradient(45deg, 
      var(--rainbow-1), 
      var(--rainbow-3), 
      var(--rainbow-5), 
      var(--rainbow-7));
    border-radius: 3px;
    margin: 10px auto 0;
    background-size: 300% 300%;
    animation: rainbow-gradient 8s ease infinite;
  }

  .form-control {
    width: 100%;
    padding: 14px 16px;
    background: rgba(45, 45, 45, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    font-size: 15px;
    margin-bottom: 20px;
    color: white !important;
    transition: all 0.3s ease;
  }

  .form-control::placeholder {
    color: #aaa;
  }

  .form-control:focus {
    border-color: var(--rainbow-5);
    outline: none;
    box-shadow: 0 0 0 3px rgba(102, 255, 102, 0.2);
    background: rgba(45, 45, 45, 0.8);
  }

  .signup-btn {
    width: 100%;
    padding: 14px;
    background: linear-gradient(45deg, 
      var(--rainbow-1), 
      var(--rainbow-3), 
      var(--rainbow-5), 
      var(--rainbow-7));
    border: none;
    border-radius: 8px;
    color: white;
    font-weight: 500;
    font-size: 16px;
    cursor: pointer;
    transition: all 0.3s ease;
    letter-spacing: 0.5px;
    background-size: 300% 300%;
    animation: rainbow-gradient 8s ease infinite;
    position: relative;
    overflow: hidden;
  }

  .signup-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(255, 53, 94, 0.3);
  }

  .signup-btn:active {
    transform: translateY(0);
  }

  .signup-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: 0.5s;
  }

  .signup-btn:hover::before {
    left: 100%;
  }

  .google-login-btn {
    width: 100%;
    padding: 14px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    font-weight: 500;
    font-size: 15px;
    color: white;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin-top: 16px;
    text-decoration: none;
  }

  .google-login-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    color: var(--rainbow-5);
  }

  .google-icon {
    border-radius: 50%;
    padding: 6px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .google-icon i {
    font-size: 1.3rem;
  }

  .signup-footer {
    margin-top: 24px;
    text-align: center;
    font-size: 14px;
    color: #aaa;
  }

  .signup-footer a {
    color: var(--rainbow-5);
    font-weight: 500;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .signup-footer a:hover {
    color: var(--rainbow-3);
    text-decoration: underline;
  }

  .floating-decoration {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    z-index: 1;
    animation: float 6s ease-in-out infinite;
    opacity: 0.7;
  }

  .decoration-1 {
    width: 300px;
    height: 300px;
    top: -100px;
    left: -100px;
    background: radial-gradient(circle, var(--rainbow-7), transparent 70%);
    animation-delay: 0s;
  }

  .decoration-2 {
    width: 250px;
    height: 250px;
    bottom: -80px;
    right: -80px;
    background: radial-gradient(circle, var(--rainbow-3), transparent 70%);
    animation-delay: 1.5s;
  }
</style>

<main>
  <div class="floating-decoration decoration-1"></div>
  <div class="floating-decoration decoration-2"></div>
  
  <div class="signup-container">
    <h1>Create Account</h1>
    <form action="/register" method="POST">
      <input name="username" placeholder="Username" class="form-control" required>
      <input name="email" type="email" placeholder="Email" class="form-control" required>
      <input type="password" name="password" placeholder="Password" class="form-control" required>
      <button type="submit" class="signup-btn">Sign Up</button>
    </form>

    <a href="/auth/google" class="google-login-btn">
      <span class="google-icon">
        <i class="fab fa-google"></i>
      </span>
      Continue with Google
    </a>

    <div class="signup-footer">
      Already have an account? <a href="/login">Login</a>
    </div>
  </div>
</main>

