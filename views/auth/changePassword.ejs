<% layout('layout') %>
<div class="password-change-container">
  <div class="password-change-card">
    <div class="password-change-header">
      <h2 class="password-change-title"><i class="fas fa-lock me-2"></i>Change Password</h2>
      <div class="password-change-divider"></div>
      <p class="password-change-subtitle">Secure your account with a new password</p>
    </div>
    
    <form method="POST" action="/auth/profile/change-password" class="password-change-form">
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-icon">
            <i class="fas fa-lock"></i>
          </span>
          <input type="password" name="currentPassword" class="form-control" placeholder="Current password" required>
        </div>
      </div>
      
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-icon">
            <i class="fas fa-key"></i>
          </span>
          <input type="password" name="newPassword" class="form-control" placeholder="New password" required>
        </div>
        <div class="password-strength">
          <div class="strength-meter">
            <div class="strength-level" id="password-strength-level"></div>
          </div>
          <small class="password-hint">Use 8+ characters with uppercase, numbers & symbols</small>
        </div>
      </div>
      
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-icon">
            <i class="fas fa-check-circle"></i>
          </span>
          <input type="password" name="confirmPassword" class="form-control" placeholder="Confirm new password" required>
        </div>
        <div id="password-match" class="password-match-hint"></div>
      </div>
      
      <div class="form-actions">
        <button type="submit" class="update-password-btn">
          <i class="fas fa-save me-2"></i>Update Password
        </button>
      </div>
    </form>
  </div>
</div>

<style>
  /* Font Awesome for icons */
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
  
  .password-change-container {
    max-width: 500px;
    margin: 3rem auto;
    padding: 0 1.5rem;
  }
  
  .password-change-card {
    background: #ffffff;
    border-radius: 10px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    border: 1px solid #e0e0e0;
  }
  
  .password-change-header {
    background: linear-gradient(135deg, #2c3e50, #34495e);
    padding: 1.8rem;
    color: white;
    text-align: center;
  }
  
  .password-change-title {
    margin: 0;
    font-weight: 600;
    font-size: 1.8rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .password-change-divider {
    height: 2px;
    background: rgba(255,255,255,0.2);
    margin: 1rem auto;
    width: 80px;
  }
  
  .password-change-subtitle {
    margin: 0;
    opacity: 0.9;
    font-weight: 300;
    font-size: 1rem;
  }
  
  .password-change-form {
    padding: 2rem;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  .input-group {
    position: relative;
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
  }
  
  .input-group-icon {
    position: absolute;
    left: 15px;
    color: #7f8c8d;
    z-index: 1;
  }
  
  .form-control {
    width: 100%;
    padding: 0.8rem 1rem 0.8rem 2.8rem;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background-color: #f9f9f9;
  }
  
  .form-control:focus {
    border-color: #3498db;
    box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
    background-color: white;
    outline: none;
  }
  
  .password-strength {
    margin-top: 0.5rem;
  }
  
  .strength-meter {
    height: 4px;
    background: #f0f0f0;
    border-radius: 2px;
    overflow: hidden;
    margin-bottom: 0.3rem;
  }
  
  .strength-level {
    height: 100%;
    width: 0;
    background: #e74c3c;
    transition: all 0.3s ease;
  }
  
  .password-hint {
    color: #95a5a6;
    font-size: 0.8rem;
    display: block;
  }
  
  .password-match-hint {
    color: #95a5a6;
    font-size: 0.8rem;
    margin-top: 0.3rem;
    min-height: 1rem;
  }
  
  .form-actions {
    margin-top: 2rem;
    text-align: center;
  }
  
  .update-password-btn {
    background: linear-gradient(135deg, #2ecc71, #27ae60);
    color: white;
    border: none;
    padding: 0.8rem 2rem;
    border-radius: 6px;
    font-weight: 500;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    box-shadow: 0 2px 5px rgba(46, 204, 113, 0.2);
  }
  
  .update-password-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(46, 204, 113, 0.3);
  }
  
  @media (max-width: 576px) {
    .password-change-container {
      padding: 0 1rem;
    }
    
    .password-change-form {
      padding: 1.5rem;
    }
  }
</style>