<% layout('layout') %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<body class="bg-light">
  <div class="container py-5">
    <h1 class="mb-4">Admin Dashboard</h1>

    <div class="row g-3">
      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-body text-center">
            <h5 class="card-title">Total Products</h5>
            <p class="card-text fs-4 fw-bold"><%= productCount %></p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-body text-center">
            <h5 class="card-title">Total Users</h5>
            <p class="card-text fs-4 fw-bold"><%= userCount %></p>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-body text-center">
            <h5 class="card-title">Total Orders</h5>
            <p class="card-text fs-4 fw-bold"><%= orderCount %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-4">
      <a href="/products" class="btn btn-primary">Manage Products</a>
      <a href="/admin/users" class="btn btn-secondary">Manage Users</a>
      <a href="/orders" class="btn btn-success">Manage Orders</a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
