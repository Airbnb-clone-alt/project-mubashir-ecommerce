<% layout('layout') %>

<style>
    /* ========== DARK THEME VARIABLES ========== */
    :root {
        /* Color Palette */
        --primary: #000000;
        --secondary: #1a1a1a;
        --accent: #ffffff;
        --text-primary: #ffffff;
        --text-secondary: #b3b3b3;
        --highlight: #2a2a2a;
        
        /* Neutrals */
        --dark: #000000;
        --light: #ffffff;
        --grey-light: #333333;
        
        /* Spacing */
        --section-padding: 5rem 0;
    }

    /* ========== BASE STYLES ========== */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: var(--text-primary);
        overflow-x: hidden;
        background-color: grey;
    }
    
    .section-title {
        text-align: center;
        margin-bottom: 3.5rem;
    }
    
    .section-title h2 {
        font-size: 2.5rem;
        font-weight: 800;
        position: relative;
        display: inline-block;
        padding-bottom: 1rem;
        color: var(--accent);
    }
    
    .section-title h2::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 3px;
        background: var(--accent);
        border-radius: 5px;
    }
    
    .btn {
        display: inline-block;
        padding: 1rem 2.5rem;
        background: var(--accent);
        color: var(--primary);
        border-radius: 50px;
        text-decoration: none;
        font-weight: 700;
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        position: relative;
        overflow: hidden;
        z-index: 1;
    }
    
    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.4);
        background: var(--text-secondary);
        color: var(--accent);
    }
    
    .btn-secondary {
        padding: 0.8rem 1.5rem;
        font-size: 0.9rem;
        background: transparent;
        color: var(--accent);
        border: 2px solid var(--accent);
    }
    
    .btn-secondary:hover {
        background: var(--accent);
        color: var(--primary);
    }

    /* ========== HERO SECTION ========== */
    .hero-section {
        background: var(--secondary);
        padding: 8rem 0 6rem;
        position: relative;
        overflow: hidden;
        text-align: center;
        color: var(--accent);
        border-bottom: 1px solid var(--grey-light);
    }
    
    .hero-content {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 2rem;
        position: relative;
        z-index: 2;
    }
    
    .hero-title {
        font-size: 4rem;
        font-weight: 900;
        margin-bottom: 1.5rem;
        line-height: 1.1;
    }
    
    .hero-subtitle {
        font-size: 1.5rem;
        margin-bottom: 3rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        font-weight: 300;
        color: var(--text-secondary);
    }

    /* ========== BENEFITS SECTION ========== */
    .benefits-section {
        padding: var(--section-padding);
        background: var(--primary);
    }
    
    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2.5rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }
    
    .benefit-card {
        background: var(--secondary);
        border-radius: 15px;
        padding: 2.5rem 2rem;
        text-align: center;
        transition: all 0.4s ease;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        border: 1px solid var(--grey-light);
        position: relative;
        overflow: hidden;
    }
    
    .benefit-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.3);
        background: var(--highlight);
    }
    
    .benefit-icon {
        font-size: 3.5rem;
        margin-bottom: 1.5rem;
        color: var(--accent);
    }
    
    .benefit-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--accent);
    }
    
    .benefit-card p {
        color: var(--text-secondary);
        line-height: 1.6;
    }

    /* ========== PRODUCT SHOWCASE ========== */
    .product-showcase {
        padding: var(--section-padding);
        background: var(--primary);
        border-top: 1px solid var(--grey-light);
    }
    
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2.5rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }
    
    .product-card {
        background: var(--secondary);
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.4s ease;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        position: relative;
        border: 1px solid var(--grey-light);
    }
    
    .product-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.3);
        background: var(--highlight);
    }
    
    .product-img {
        height: 220px;
        background: var(--dark);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        border-bottom: 1px solid var(--grey-light);
    }
    
    .product-img img {
        max-height: 80%;
        max-width: 80%;
        object-fit: contain;
        transition: transform 0.4s ease;
        filter: brightness(0.9);
    }
    
    .product-card:hover .product-img img {
        transform: scale(1.05);
        filter: brightness(1);
    }
    
    .product-info {
        padding: 1.8rem;
    }
    
    .product-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--accent);
        margin-bottom: 0.8rem;
    }
    
    .product-price {
        font-weight: 800;
        font-size: 1.3rem;
        margin-bottom: 1.5rem;
        color: var(--accent);
    }

    /* ========== RESPONSIVE ADJUSTMENTS ========== */
    @media (max-width: 768px) {
        :root {
            --section-padding: 4rem 0;
        }
        
        .hero-title {
            font-size: 2.8rem;
        }
        
        .hero-subtitle {
            font-size: 1.2rem;
        }
        
        .benefits-grid, 
        .product-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
        
        .section-title h2 {
            font-size: 2rem;
        }
    }
</style>

<!-- ========== HERO SECTION ========== -->
<section class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Shop Your Favorite Products</h1>
        <p class="hero-subtitle">Discover premium products in our sleek black collection</p>
        <a href="/products" class="btn">Explore Products</a>
    </div>
</section>

<!-- ========== BENEFITS SECTION ========== -->
<section class="benefits-section">
    <div class="section-title">
        <h2>Why Choose Us?</h2>
    </div>
    <div class="benefits-grid">
        <div class="benefit-card">
            <div class="benefit-icon">
                <i class="fas fa-bolt"></i>
            </div>
            <h3 class="benefit-title">Fast Delivery</h3>
            <p>Swift shipping that matches the speed of darkness</p>
        </div>
        <div class="benefit-card">
            <div class="benefit-icon">
                <i class="fas fa-lock"></i>
            </div>
            <h3 class="benefit-title">Secure Shopping</h3>
            <p>Your transactions are protected with military-grade security</p>
        </div>
        <div class="benefit-card">
            <div class="benefit-icon">
                <i class="fas fa-gem"></i>
            </div>
            <h3 class="benefit-title">Premium Quality</h3>
            <p>Exquisite products curated with precision and care</p>
        </div>
    </div>
</section>

<!-- ========== PRODUCT SHOWCASE ========== -->
<% if (typeof featuredProducts !== 'undefined' && featuredProducts.length > 0) { %>
    <section class="product-showcase">
        <div class="section-title">
            <h2>Black Collection</h2>
        </div>
        <div class="product-grid">
            <% featuredProducts.slice(0, 4).forEach(product => { %>
                <div class="product-card">
                    <div class="product-img">
                        <img src="<%= product.image %>" alt="<%= product.title %>">
                    </div>
                    <div class="product-info">
                        <h3 class="product-title"><%= product.title %></h3>
                        <div class="product-price">â‚¹<%= product.price %></div>
                        <a href="/products/<%= product._id %>" class="btn btn-secondary">View Details</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
<% } %>
