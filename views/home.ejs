<% layout('layout') %>

<style>
    /* Modern Grey Theme Variables */
    :root {
        --primary: #2c3e50;
        --primary-light: #34495e;
        --accent: #3498db;
        --dark: #1a1a1a;
        --light: #f8f9fa;
        --grey-light: #ecf0f1;
        --grey-medium: #bdc3c7;
        --grey-dark: #7f8c8d;
    }
    
    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, var(--grey-light) 0%, #dfe6e9 100%);
        padding: 6rem 0 5rem;
        position: relative;
        overflow: hidden;
    }
    
    .hero-content {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
        padding: 0 2rem;
        position: relative;
        z-index: 2;
    }
    
    .hero-title {
        font-size: 3.2rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }
    
    .hero-subtitle {
        font-size: 1.2rem;
        color: var(--grey-dark);
        margin-bottom: 2.5rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }
    
    .hero-btn {
        display: inline-block;
        padding: 0.9rem 2.2rem;
        background: var(--primary);
        color: white;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        border: 2px solid var(--primary);
        box-shadow: 0 4px 12px rgba(44, 62, 80, 0.15);
    }
    
    .hero-btn:hover {
        background: var(--primary-light);
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(44, 62, 80, 0.2);
    }
    
    /* Benefits Section */
    .benefits-section {
        padding: 5rem 0;
        background: white;
    }
    
    .section-title {
        text-align: center;
        margin-bottom: 3.5rem;
    }
    
    .section-title h2 {
        font-size: 2.2rem;
        color: var(--primary);
        position: relative;
        display: inline-block;
        padding-bottom: 1rem;
    }
    
    .section-title h2:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: var(--accent);
        border-radius: 2px;
    }
    
    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }
    
    .benefit-card {
        background: var(--light);
        border-radius: 8px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
        border: 1px solid rgba(0,0,0,0.05);
    }
    
    .benefit-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }
    
    .benefit-icon {
        font-size: 2.5rem;
        color: var(--accent);
        margin-bottom: 1.5rem;
    }
    
    .benefit-title {
        font-size: 1.3rem;
        color: var(--primary);
        margin-bottom: 1rem;
    }
    
    /* Product Showcase */
    .product-showcase {
        padding: 5rem 0;
        background: var(--grey-light);
    }
    
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }
    
    .product-card {
        background: white;
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 3px 10px rgba(0,0,0,0.05);
    }
    
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    
    .product-img {
        height: 200px;
        background: #f5f5f5;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .product-img img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
    }
    
    .product-info {
        padding: 1.5rem;
    }
    
    .product-title {
        font-size: 1.1rem;
        color: var(--primary);
        margin-bottom: 0.5rem;
        font-weight: 600;
    }
    
    .product-price {
        font-weight: 700;
        color: var(--accent);
        margin-bottom: 1rem;
    }
    
    .product-btn {
        display: block;
        text-align: center;
        padding: 0.6rem;
        background: var(--primary);
        color: white;
        border-radius: 4px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .product-btn:hover {
        background: var(--primary-light);
    }
    
    /* Responsive Adjustments */
    @media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }
        
        .hero-subtitle {
            font-size: 1.1rem;
        }
        
        .benefits-grid, .product-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Premium Shopping Experience</h1>
        <p class="hero-subtitle">Discover exquisite products at unbeatable prices</p>
        <a href="/products" class="hero-btn">Explore Products</a>
    </div>
</section>

<!-- Benefits Section -->
<section class="benefits-section">
    <div class="section-title">
        <h2>Our Advantages</h2>
    </div>
    <div class="benefits-grid">
        <div class="benefit-card">
            <div class="benefit-icon">
                <i class="fas fa-shipping-fast"></i>
            </div>
            <h3 class="benefit-title">Fast Delivery</h3>
            <p>Get your orders delivered quickly with our premium shipping partners</p>
        </div>
        <div class="benefit-card">
            <div class="benefit-icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <h3 class="benefit-title">Secure Payments</h3>
            <p>100% secure payment options with industry-leading encryption</p>
        </div>
        <div class="benefit-card">
            <div class="benefit-icon">
                <i class="fas fa-headset"></i>
            </div>
            <h3 class="benefit-title">24/7 Support</h3>
            <p>Dedicated support team available round the clock</p>
        </div>
    </div>
</section>

<!-- Product Showcase - Only shown if featuredProducts exists -->
<% if (typeof featuredProducts !== 'undefined' && featuredProducts.length > 0) { %>
<section class="product-showcase">
    <div class="section-title">
        <h2>Featured Products</h2>
    </div>
    <div class="product-grid">
        <% featuredProducts.slice(0, 4).forEach(product => { %>
        <div class="product-card">
            <div class="product-img">
                <img src="<%= product.image %>" alt="<%= product.title %>">
            </div>
            <div class="product-info">
                <h3 class="product-title"><%= product.title %></h3>
                <div class="product-price">â‚¹<%= product.price %></div>
                <a href="/products/<%= product._id %>" class="product-btn">View Details</a>
            </div>
        </div>
        <% }) %>
    </div>
</section>
<% } else { %>
<!-- Alternative content if no featured products -->
<section class="product-showcase">
    <div class="section-title">
        <h2>Our Collection</h2>
    </div>
    <div class="text-center py-4">
        <p>Explore our amazing products collection</p>
        <a href="/products" class="hero-btn">View All Products</a>
    </div>
</section>
<% } %>