<% layout('layout') %>

<style>
  .edit-product-container {
    background: linear-gradient(135deg, #eaf4ff 0%, #d6e6f2 100%);
    padding: 3rem;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  }

  .edit-product-header {
    color: #1e3a5f;
    border-bottom: 1px solid rgba(45, 55, 72, 0.1);
    padding-bottom: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .edit-product-header h1 {
    font-weight: 700;
    letter-spacing: -0.5px;
  }

  .edit-product-form {
    background-color: #ffffff;
    border-radius: 10px;
    padding: 2.5rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.03);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .edit-product-form:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(0,0,0,0.08);
  }

  .form-label {
    color: #334e68;
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
  }

  .form-control {
    border: 1px solid #c8d5e1;
    border-radius: 8px;
    padding: 0.75rem 1rem;
    background-color: #f0f6fb;
    transition: all 0.3s ease;
  }

  .form-control:focus {
    border-color: #3a7bd5;
    box-shadow: 0 0 0 3px rgba(58, 123, 213, 0.15);
    background-color: #ffffff;
  }

  .input-group-text {
    background-color: #eaf2fb;
    border-color: #c8d5e1;
    color: #2c3e50;
  }

  .btn-update {
    background: linear-gradient(135deg, #3a7bd5 0%, #00d2ff 100%);
    border: none;
    border-radius: 8px;
    padding: 0.75rem 2rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    color: white;
    box-shadow: 0 4px 15px rgba(0, 210, 255, 0.3);
  }

  .btn-update:hover {
    background: linear-gradient(135deg, #00d2ff 0%, #3a7bd5 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 210, 255, 0.4);
  }

  .btn-outline-secondary {
    border-radius: 8px;
    padding: 0.75rem 2rem;
    font-weight: 600;
    transition: all 0.3s ease;
    border-width: 2px;
  }

  .btn-outline-secondary:hover {
    background-color: #eaf2fb;
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

<div class="container edit-product-container mt-5 animate-fade-in">
  <div class="edit-product-header text-center">
    <h1 class="h2 mb-2">Edit Product Details</h1>
    <p class="text-muted mb-0">Refine and update your product information</p>
  </div>

  <form action="/products/<%= product._id %>?_method=PUT" method="POST" class="edit-product-form">
    <div class="mb-4">
      <label for="title" class="form-label">Product Title</label>
      <div class="input-group">
        <span class="input-group-text"><i class="fas fa-heading"></i></span>
        <input type="text" name="product[title]" id="title" class="form-control"
               value="<%= product.title %>" required placeholder="Enter product name">
      </div>
    </div>

    <div class="mb-4">
      <label for="description" class="form-label">Description</label>
      <div class="input-group">
        <span class="input-group-text align-items-start"><i class="fas fa-align-left mt-1"></i></span>
        <textarea name="product[description]" id="description" class="form-control"
                  rows="5" placeholder="Enter detailed product description"><%= product.description %></textarea>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 mb-4">
        <label for="price" class="form-label">Price</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-rupee-sign"></i></span>
          <input type="number" name="product[price]" id="price" class="form-control"
                 value="<%= product.price %>" step="0.01" min="0" required placeholder="0.00">
        </div>
      </div>

      <div class="col-md-6 mb-4">
        <label for="image" class="form-label">Image URL</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-image"></i></span>
          <input type="url" name="product[image]" id="image" class="form-control"
                 value="<%= product.image %>" required placeholder="https://example.com/image.jpg">
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mt-5 pt-2">
      <a href="/products" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-2"></i>Cancel
      </a>
      <button type="submit" class="btn btn-update">
        <i class="fas fa-save me-2"></i>Update Product
      </button>
    </div>
  </form>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
